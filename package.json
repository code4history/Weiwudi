{
  "name": "@c4h/weiwudi",
  "version": "1.0.0",
  "description": "Service worker for tile cache with vector tile (MVT) support",
  "type": "module",
  "main": "./dist/weiwudi.cjs",
  "module": "./dist/weiwudi.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/weiwudi.js",
      "require": "./dist/weiwudi.cjs"
    },
    "./sw": {
      "types": "./dist/weiwudi_sw.d.ts",
      "import": "./dist/weiwudi_sw.js"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "README.ja.md"
  ],
  "scripts": {
    "dev": "vite",
    "build": "npm run typecheck && cross-env BUILD_MODE=package vite build",
    "typecheck": "tsc --noEmit --allowImportingTsExtensions",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:ci": "playwright test --config=playwright-ci.config.ts",
    "lint": "eslint src tests",
    "generate:test-data": "echo 'ブラウザで http://localhost:5173/claudescript/test-data-generator.html を開いてください'",
    "prepublishOnly": "npm run lint && npm run typecheck && npm run test && npm run build",
    "version:bump": "node scripts/bump-version.js",
    "version:sync": "node scripts/sync-version.js",
    "publish:npm": "node scripts/publish-npm.js",
    "publish:npm:dry": "node scripts/publish-npm.js --dry-run"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/code4history/Weiwudi.git"
  },
  "keywords": [
    "service-worker",
    "tile",
    "cache",
    "vector-tile",
    "mvt",
    "mapbox",
    "workbox"
  ],
  "author": "Code for History",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/code4history/Weiwudi/issues"
  },
  "homepage": "https://github.com/code4history/Weiwudi#readme",
  "devDependencies": {
    "@eslint/js": "^9.30.1",
    "@playwright/test": "^1.53.2",
    "@types/node": "^22.16.0",
    "@types/serviceworker": "^0.0.109",
    "@typescript-eslint/eslint-plugin": "^8.35.1",
    "@typescript-eslint/parser": "^8.35.1",
    "@vitest/coverage-v8": "^3.2.4",
    "cross-env": "^7.0.3",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^9.1.0",
    "fake-indexeddb": "^6.0.1",
    "jsdom": "^25.0.1",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4",
    "workbox-build": "^7.3.0"
  },
  "dependencies": {
    "@c4h/beatbox": "^0.1.0",
    "workbox-core": "^7.3.0",
    "workbox-expiration": "^7.3.0",
    "workbox-precaching": "^7.3.0",
    "workbox-routing": "^7.3.0",
    "workbox-strategies": "^7.3.0"
  }
}
